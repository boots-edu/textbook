{
    "name": "boots-edu/textbook",
    "version": "0.0.1",
    "description": "",
    "main": "dist/index.js",
    "scripts": {
        "deploy-cover": "npm run coverage && mkdir -p ../docs/cover && cp -r ./coverage/* ../docs/cover",
        "build": "rm -rf ./dist && esbuild src/index.ts --bundle --outfile=dist/index.js --sourcemap && rm -rf ./dist/tests && cp ./package.json dist && cp ./dist/index.js ../source/assets/js/boots-library.js",
        "test": "jest",
        "watch": "npm run clean && jest --watchAll=true",
        "dev": "esbuild src/index.ts --bundle --outfile=dist/index.js --sourcemap --watch",
        "coverage": "npm run clean && jest --coverage --watchAll=false --coverageDirectory='./coverage'",
        "test:json": "npm run clean && jest --json --watchAll=false --outputFile jest-output.json --coverage",
        "lint": "eslint . --ext .ts",
        "doc": "typedoc --entryPoints src --githubPages true --readme ../README.md --navigation.includeGroups",
        "lint:fix": "eslint . --ext .ts --fix",
        "format": "prettier \"(src|test)/**/*\" --ignore-unknown",
        "pub": "cp ./package.json dist && cd ./dist && npm publish --access public",
        "clean": "rm -rf ./dist",
        "realclean": "rm -rf ./dist && rm -rf ./node_modules && rm -rf ./docs",
        "link": "npm run build && cd dist && npm link",
        "tsc": "tsc "
    },
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@boots-edu/webz": "^0.9.12",
        "@codemirror/lang-javascript": "github:codemirror/lang-javascript",
        "@jest/globals": "^29.7.0",
        "@types/jest": "^29.5.12",
        "@types/jquery": "^3.5.30",
        "@types/jquery.fancytree": "^0.0.10",
        "@typescript-eslint/eslint-plugin": "^6.2.0",
        "@typescript-eslint/parser": "^6.2.0",
        "codemirror": "^6.0.1",
        "contodo": "^0.4.7",
        "esbuild": "0.21.5",
        "eslint": "^8.46.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "prettier": "^3.2.4",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "xhr-mock": "^2.5.1"
    },
    "dependencies": {
        "@codemirror/lang-css": "^6.3.1",
        "@codemirror/lang-html": "^6.4.9",
        "@codemirror/lang-json": "^6.0.1",
        "@codemirror/lang-markdown": "^6.3.2",
        "@codemirror/lang-yaml": "^6.1.2",
        "@types/jsdom": "^21.1.6",
        "@types/uuid": "^10.0.0",
        "jquery": "^3.7.1",
        "jquery.fancytree": "^2.38.3",
        "typescript": "5.5.2",
        "uuid": "^10.0.0"
    }
}
